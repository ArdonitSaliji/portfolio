---
interface Props {
  date: string;
  title: string;
  company: string;
  location: string;
  description: string;
}
const { date, title, company, location, description } = Astro.props;
---
<div class="timeline-item">
    <div class="timeline-dot"></div>
    <div class="timeline-content">
        <span class="timeline-date">{date}</span>
        <h3>{title}</h3>
        <p class="company">{company}</p>
        <p class="location">{location}</p> <p>{description}</p>
    </div>
</div>